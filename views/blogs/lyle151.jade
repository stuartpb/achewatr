extends ../achewatr

block head
  link(rel="stylesheet", href="/blogstyles/897.css")

block content
  #wrap: #wrap2.cf
    header#header
      h1#blog-title= blogName
    #description: p
    #content.cf
      #main: #main2
        h2.date-header= active.published.format('dddd, MMMM DD, YYYY')
        article.post
          if active.title
            h3.post-title= active.title
          p.post-body!= active.content
          p.post-footer posted by #{active.author || 'me'} at <a href="#{originalUrl}">#{active.published.format('h:mm A')}</a>
      #sidebar: #sidebar2
        h2.sidebar-title about me
        img(src="http://www.achewood.com/rsrc/img/lyle_blog.gif")
        br
        b LYLE GABRIEL <br> ACHEWOOD
