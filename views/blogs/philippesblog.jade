extends ../achewatr

block head
  link(rel="stylesheet", href="/blogstyles/dots.css")

block content
  #content
    #sidebar: #sidebar2
      h1#blog-title= blogName
      img(src="http://www.achewood.com/rsrc/img/philippe_blog.gif")
      br
      h2.sidebar-title About Me
      | NAME: Philippe!<br>
      | FROM: Achewood, Califronia<br>
      | AGE: I am five, so no spam, please.
    #main: #main2
      h2.date-header= active.blogDate.toString('dddd, MMMM dd, yyyy')
      article.post
        h3.post-title= active.title
        .post-body: p!= active.content
        p.post-footer posted by #{active.author || 'me'} @ <a href="#{originalUrl}">#{active.blogDate.toString('h:mm TT')}</a>
    footer#footer: p &nbsp;
