!!!
html
  head
    meta(charset="utf-8")
    title= pageTitle + ' - achewatr'
    link(rel="stylesheet", href="/achewatr.css")
    block head
  body
    nav#achewatr-nav
      if prev
        #achewatr-prev: a(href=prev.url)
          ="< "
          img.achewatr-source(src='/images/72x16/'+prev.banner+'.png', alt=prev.source)
          =" "
          time.achewatr-date
            = prev.date
            if prev.time
              = " " + prev.time
          if prev.title
            =" "
            span.achewatr-title= prev.title
      #achewatr-heading
        div
          time.achewatr-date
            = active.date
            if active.time
              = " " + active.time
        div
          span.achewatr-source= active.source
          if active.title
            =" "
            span.achewatr-title= active.title
      if next
        #achewatr-next: a(href=next.url)
          if next.title
            span.achewatr-title= next.title
            =" "
          time.achewatr-date
            if next.time
              = next.time + " "
            = next.date
          =" "
          img.achewatr-source(src='/images/72x16/'+next.banner+'.png', alt=next.source)
          =" >"
      else
        #achewatr-next.achewatr-fin fin.
    #achewatr-content.cf
      block content
    footer#achewatr-footer.
      All content Copyright 2001-#{new Date().getFullYear()} Chris Onstad.
      achewatr is a fan project by <a href="https://github.com/stuartpb/achewatr">Stuart P. Bentley</a>.
